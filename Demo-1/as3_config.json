{
    "class": "ADC",
    "schemaVersion": "3.4.0",
    "id": "demo",
    "label": "Virtual Server with FQDN poo",
    "remark": "This declaration will deploy a VServer with logging and FQDN SD pool members",
    "Scale_out_demo": {
        "class": "Tenant",
        "demo_app": {
            "class": "Application",
            "app1.f5demo.cloud": {
                "class": "Service_HTTP",
                "virtualAddresses": [
                    "{{{vip_address}}}"
                ],
                
                "pool": "fqdn_pool",
                "virtualPort": 80,
                "persistenceMethods": [
                    "cookie"
                ],
                "profileHTTP": "basic",
                "layer4": "tcp",
                "profileTCP": "normal",
                "snat": "auto"
            },
            "fqdn_pool": {
                "class": "Pool",
                "members": [
                    {
                        "servicePort": 80,
                        "queryInterval": 10,
                        "addressDiscovery": "fqdn",
                        "autoPopulate": true,
                        "hostname": "{{{service_discovery_fqdn}}}"
                    }
                ]
            }
        }
    }
}
